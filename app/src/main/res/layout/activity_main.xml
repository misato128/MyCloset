<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a20170905.hiroe.mycloset.MainActivity">

    <LinearLayout
        android:layout_height="551dp"
        android:layout_width="368dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <fragment
                android:id="@+id/list_fragment_tops"
                android:name="com.a20170905.hiroe.mycloset.RecyclerTopsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <fragment
                android:id="@+id/list_fragment_bottoms"
                android:name="com.a20170905.hiroe.mycloset.RecyclerBottomsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <fragment
                android:id="@+id/list_fragment_outer"
                android:name="com.a20170905.hiroe.mycloset.RecyclerOuterFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <fragment
                android:id="@+id/list_fragment_shoes"
                android:name="com.a20170905.hiroe.mycloset.RecyclerShoesFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
